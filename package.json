{
  "name": "qalam",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "npx serve client/dist -p 3000",
    "lint": "cd client && npm run lint",
    "build:quran": "tsx scripts/build-quran-json.ts",
    "seed:analysis": "tsx --env-file=.env scripts/seed-analysis.ts",
    "upload:r2": "tsx scripts/upload-to-r2.ts",
    "data:status": "tsx scripts/data-status.ts",
    "worker:dev": "cd worker && npm run dev",
    "worker:dev:remote": "cd worker && npm run dev:remote",
    "worker:deploy": "cd worker && npm run deploy",
    "pages:deploy": "npm run build && npx wrangler pages deploy client/dist --project-name=qalam",
    "deploy": "npm run worker:deploy && npm run pages:deploy",
    "test:e2e": "playwright test",
    "client:install": "cd client && npm install",
    "next:dev": "next dev",
    "next:build": "next build"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "next": "^16.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^16.1.1",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.51.0",
    "wrangler": "^4.54.0"
  }
}
